{{!-- Display Company user-field after Password field --}}
{{#each userFields as |f|}}
    {{#if (eq f.field.name 'Company')}}
        <div class="input-group create-account-company">
              {{input value=f.value class=(value-entered f.value) id="new-account-company" name="company" maxlength=this.site.user_field_max_length
              autocomplete="discourse"}}
              <label class="alt-placeholder" for="new-account-company">
                {{html-safe f.field.name}}
                {{#if f.field.required}}<span class="required">*</span>{{/if}}
              </label>

            {{input-tip validation=companyValidation id="company-validation"}}
            <label class="more-info" for="new-account-company">{{html-safe f.field.description}}</label>
        </div>
    {{/if}}    
{{/each}}
{{!-- Display Country user-field after Company user-field --}}
{{#each userFields as |f|}}   
    {{#if (eq f.field.name 'Country')}}
        <div class="input-group create-account-country">
            {{!-- adding the value-entered class here to
            be able to detect if the user field has a value
            entered --}}
                {{user-field field=f.field value=f.value
                class=(value-entered f.value)}}
        </div>
    {{/if}}    
{{/each}}
