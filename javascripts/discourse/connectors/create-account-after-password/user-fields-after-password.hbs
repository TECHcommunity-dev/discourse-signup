{{!-- Display terms of service Checkbox after Province user-field  [Added by Ajroddin; Date: 05/10/2021] --}}
{{#each userFields as |f|}}      
        {{#if (eq f.field.name 'Terms of service')}}
        <div class="create-account-terms-of-service">        
                 {{user-field field=f.field value=f.value
                class=(value-entered f.value)}}
        </div> 
        {{/if}} 
{{/each}}
